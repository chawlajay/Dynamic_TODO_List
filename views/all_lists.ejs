<%- include('header'); -%>

    <div class="box" id="heading">
        <h1>Names of all your lists</h1>
    </div>

    <div class="create_list_form">
        <form action="/list/newList" method="post">
            <input type="text" name="newListName" placeholder="create a new list">
            <button type="submit">+</button>
        </form>
    </div>

    <div class="list_box">
        <% listNames.forEach(list => { %>
            <% let path = "/list/" + list.name; %>    
                <div class="list_item">
                    <a href=<%= path %>>
                        <%= list.name %>
                    </a>
                    <form action="/delete/list" method="post">
                        <input type="hidden" name="listName" value=<%= list.name %>>
                        <button class="delete_list_button" type="submit">
                            <i class="far fa-trash-alt delete-icon fa-lg"></i>
                        </button>
                    </form>
                </div>
        <% }); %>
    </div>
<%- include('footer'); -%>