<%- include('header'); -%>

    <div class="box" id="heading">
        <h1><%= listTitle %></h1>
    </div>

    <div class="box">
        <% listOfItems.forEach((item) => { %>
            <form action="/delete" method="post">
                <div class="item">
                    <input type="hidden" name="listName" value=<%= listTitle %>>
                    <input type="checkbox" name="listItemId" onChange="this.form.submit()" value=<%= item._id%>>
                    <p><%= item.name %></p>
                </div>
            </form>
        <% }); %>
       
        <form class="item" action="/list" method="post">
            <input type="text" name="newItem" placeholder="enter task name..." autocomplete="off">
            <button type="submit" name="list" value=<%= listTitle %>>+</button>
        </form>
    </div>
<%- include('footer'); -%>